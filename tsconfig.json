{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es5",
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "*": [ "./types/*"]
    },
    "allowJs": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "typings"
  ]
}
